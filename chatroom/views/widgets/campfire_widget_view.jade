div.campfireWidgetSmall
    div(ng-repeat="chatMessage in data.messages track by $index")
        span.userName {{chatMessage.user_id}}
        span.messageBody {{chatMessage.body}}
    div.inputContainer
        span.nine.columns
            input(type="text", ng-model="text")
        span.two.columns.button.success(ng-click="sendMessage()") Send


